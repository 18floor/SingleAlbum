<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/headerView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/common_spacing">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="SoundHelix Songs"/>

    <TextView
        android:id="@+id/titleArtistDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_title_text"
        android:layout_marginStart="@dimen/min_spacing"
        android:text="-"
        app:layout_constraintStart_toEndOf="@id/titleView"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/artistView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_title_text"
        android:layout_marginStart="@dimen/min_spacing"
        app:layout_constraintStart_toEndOf="@id/titleArtistDiv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="T. SchÃ¼rger"/>


    <TextView
        android:id="@+id/subtitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/regular_text"
        app:layout_constraintTop_toBottomOf="@id/titleView"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="www.soundhelix.com"/>

    <TextView
        android:id="@+id/publishedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_spacing"
        android:textSize="@dimen/big_title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitleView"
        android:text="Release:"/>

    <TextView
        android:id="@+id/publishedView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_title_text"
        android:layout_marginTop="@dimen/common_spacing"
        android:layout_marginStart="@dimen/min_spacing"
        app:layout_constraintStart_toEndOf="@id/publishedLabel"
        app:layout_constraintTop_toBottomOf="@id/subtitleView"
        tools:text="2009, 2010, 2011, 2013"/>

    <TextView
        android:id="@+id/genreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/publishedLabel"
        android:text="Genre:"/>

    <TextView
        android:id="@+id/genreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_title_text"
        android:layout_marginStart="@dimen/min_spacing"
        app:layout_constraintStart_toEndOf="@id/genreLabel"
        app:layout_constraintTop_toBottomOf="@id/publishedView"
        tools:text="electronic"/>

</androidx.constraintlayout.widget.ConstraintLayout>