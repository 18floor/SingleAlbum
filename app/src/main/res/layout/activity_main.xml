<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/common_spacing"
    android:background="@color/light_blue_900"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_title_text"
        android:textColor="@color/white_overlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="SoundHelix Songs"/>

    <TextView
        android:id="@+id/titleArtistDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_title_text"
        android:textColor="@color/white_overlay"
        android:layout_marginStart="@dimen/min_spacing"
        android:text="-"
        app:layout_constraintStart_toEndOf="@id/titleView"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/artistView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_title_text"
        android:textColor="@color/white_overlay"
        android:layout_marginStart="@dimen/min_spacing"
        app:layout_constraintStart_toEndOf="@id/titleArtistDiv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="T. SchÃ¼rger"/>


    <TextView
        android:id="@+id/subtitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/regular_text"
        android:textColor="@color/white_overlay"
        app:layout_constraintTop_toBottomOf="@id/titleView"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="www.soundhelix.com"/>

    <TextView
        android:id="@+id/publishedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_spacing"
        android:textSize="@dimen/big_title_text"
        android:textColor="@color/white_overlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitleView"
        android:text="Release:"/>

    <TextView
        android:id="@+id/publishedView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_title_text"
        android:textColor="@color/white_overlay"
        android:layout_marginTop="@dimen/common_spacing"
        android:layout_marginStart="@dimen/min_spacing"
        app:layout_constraintStart_toEndOf="@id/publishedLabel"
        app:layout_constraintTop_toBottomOf="@id/subtitleView"
        tools:text="2009, 2010, 2011, 2013"/>

    <TextView
        android:id="@+id/genreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_title_text"
        android:textColor="@color/white_overlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/publishedLabel"
        android:text="Genre:"/>

    <TextView
        android:id="@+id/genreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_title_text"
        android:textColor="@color/white_overlay"
        android:layout_marginStart="@dimen/min_spacing"
        app:layout_constraintStart_toEndOf="@id/genreLabel"
        app:layout_constraintTop_toBottomOf="@id/publishedView"
        tools:text="electronic"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/albumList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/common_spacing"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/genreView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"
        tools:listitem="@layout/item_track"/>

    <ProgressBar
        android:id="@+id/progressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>